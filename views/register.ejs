<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sign up</title>
    <%- include('layout/head'); %>
</head>
<body class="bg-1 d-flex flex-column min-vh-50" style="margin: 0px auto">
<div>
    <%- include('layout/navbar'); %>

    <div class="container py-2 mb-0 mt-5">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col col-xl-4">
                <div class="card bg-white" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="d-flex align-items-center">
                            <div class="card-body  text-black">
                                <form action="/user/" method="post">
                                    <h1 class="fw-normal mb-3 pb-3 text-black">
                                        Sign up
                                    </h1>
                                    <div class="form-floating form-group mb-3">
                                        <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                                        <label for="floatingInput"><i class="fa-solid fa-envelope"></i> Email address</label>
                                        <div class="invalid-feedback">
                                            User with this email is already exists
                                        </div>
                                    </div>
                                    <div class="form-floating form-group mb-3">
                                        <input type="text" name="username" class="form-control" id="floatingUsername" placeholder="User name" required>
                                        <label for="floatingUsername"><i class="fas fa-address-book"></i> Username</label>
                                    </div>
                                    <div class="form-floating form-group mb-3">
                                        <input type="password" name="password" minlength="8" class="form-control" id="floatingPassword" placeholder="Password" required>
                                        <label for="floatingPassword"><i class="fa-solid fa-lock"></i> Password</label>
                                        <div class="invalid-feedback">
                                            Password is empty
                                        </div>
                                    </div>
<!--                                    <div class="form-floating form-group mb-3">-->
<!--                                        <input type="password" name="confirmPassword" minlength="8" class="form-control" id="confirmPassword" placeholder="Confirm password" required>-->
<!--                                        <label for="confirmPassword"><i class="fa-solid fa-unlock-keyhole"></i> Confirm password</label>-->
<!--                                    </div>-->

                                    <script>
                                        $("#password-show").change(function(){
                                            var $pwd = $("#floatingPassword");
                                            if ($pwd.attr('type') === 'password') {
                                                $pwd.attr('type', 'text');
                                            } else {
                                                $pwd.attr('type', 'password');
                                            }
                                        });
                                    </script>
                                    <button class="btn btn-lg btn-dark rounded-pill mb-4" type="submit">Register</button>
                                    <p style="color: darkgray">Already have account? <a class="text-info">Sign up</a></p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<%- include('layout/footer'); %>

</body>
</html>